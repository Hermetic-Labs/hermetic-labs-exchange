{
  "version": "4.0",
  "name": "PCI DSS Security Policy",
  "description": "Payment Card Industry Data Security Standard compliance policy",
  "requirements": {
    "network_security": {
      "firewalls": true,
      "segmentation": true
    },
    "protect_stored_data": {
      "encryption": "AES-256",
      "masking": true,
      "retention_days": 365
    },
    "encrypt_transmission": {
      "tls_version": "1.3",
      "cipher_suites": ["TLS_AES_256_GCM_SHA384"]
    },
    "access_control": {
      "mfa_required": true,
      "session_timeout_minutes": 15
    },
    "logging": {
      "enabled": true,
      "retention_days": 365
    }
  },
  "pan_detection": {
    "patterns": [
      "\\b(?:4[0-9]{12}(?:[0-9]{3})?|5[1-5][0-9]{14}|3[47][0-9]{13}|6(?:011|5[0-9]{2})[0-9]{12})\\b"
    ],
    "luhn_validation": true
  }
}
